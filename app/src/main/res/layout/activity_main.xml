<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoGravedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del Sensor de Gravedad"
        android:textSize="20sp"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/imagenView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/idefault"
        android:layout_below="@id/textoGravedad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/botonContar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contar"
        android:layout_below="@id/imagenView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/botonMostrarConteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Conteo"
        android:layout_below="@id/botonContar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/botonDetenerConteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detener Conteo"
        android:layout_below="@id/botonMostrarConteo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textoConteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃºmero de cambios:"
        android:textSize="18sp"
        android:layout_below="@id/botonDetenerConteo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
